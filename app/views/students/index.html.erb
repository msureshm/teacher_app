<table border="1">
  <tr>
    <th>Name</th>
    <th>Subject</th>
    <th>Marks</th>
    <th>Action</th>
  </tr>
  <% @students.each do |student| %>
    <tr>
      <td><%= student.name %></td>
      <td><%= student.subject %></td>
      <td><%= student.marks %></td>
      <td>
        <%= link_to "Edit", edit_student_path(student) %>
        <%= link_to "Delete", student, data: { "turbo-method": :delete, turbo_confirm: 'Are you sure you want to delete this student?' } %>
      </td>
    </tr>
  <% end %>
</table>