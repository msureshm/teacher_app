<h2>Edit Student</h2>
<table border="1">
  <%= form_for @student do |form| %>
    <tr>
      <th>Name</th>
      <td><%= form.text_field :name %></td>
    </tr>
    <tr>
      <th>Subject</th>
      <td><%= form.text_field :subject %></td>
    </tr>
    <tr>
      <th>Marks</th>
      <td><%= form.text_field :marks %></td>
    </tr>
    <tr>
      <td colspan="2"><%= form.submit %></td>
    </tr>
  <% end %>
</table>